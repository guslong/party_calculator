<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="8" >

    <TextView
        android:id="@+id/textView1"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:text="Recommended amounts for your party:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/beerResultTextView"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="3"
        android:text="Beer"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/whiteWineResultTextView"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="6"
        android:text="White Wine"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/redWineResultTextView"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="4"
        android:text="Red Wine"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="6"
        android:src="@drawable/white_wine" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="4"
        android:src="@drawable/red_wine" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="3"
        android:src="@drawable/ic_launcher" />

</GridLayout>