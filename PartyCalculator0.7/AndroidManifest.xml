<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.anguslong.partycalculator"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="17" />

    <application
        android:name="net.anguslong.partycalculator.PartyCalculatorApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name="net.anguslong.partycalculator.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="net.anguslong.partycalculator.PartyCalculatorResult"
            android:parentActivityName="net.anguslong.partycalculator.Main" >
        </activity>
        <activity android:name="net.anguslong.partycalculator.PrefsActivity" >
        </activity>
    </application>

</manifest>